@model RealState.Models.SignUpModel

@{
    ViewBag.Title = "SignUp";
   
}
@{Layout = "";}
<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="~/css/userAco/SignUp.css">

    <!-- Link For icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <style>
        body {
            background-color: rgb(15, 84, 119)
        }
        header .switch a {
            cursor:pointer
        }

    </style>
</head>

<div class="container">
  
    <div class="formCode">
        <!-- Login and register navbar -->
        <header>
            <ul class="switch">
                <li><a onclick="location.href = '@Url.Action("Login","UserAccount" ,FormMethod.Post)'">Login</a></li>
                <li><a onclick="location.href = '@Url.Action("SignUp","UserAccount")'">Register</a></li>
            </ul>
        </header>
        <h1>Register</h1>
        @using (Html.BeginForm())
        {

    <form action="">
        <!-- username field -->
        <div class="textfield" >
            <!-- user icon -->
            <i class="fa-solid fa-user"></i>
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "inp", @placeholder = "Enter your Name", } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", style = "color:red; text-align; margin-left:100px;" })
        </div>


        <!-- Email field -->

        <div class="textfield" >
            <!-- Email icon -->
            <i class="fa-solid fa-envelope"></i>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "inp", @placeholder = "Enter your Email" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", style = "color:red; text-align; margin-left:100px;" })
        </div>

        <!-- password field -->
        <div class="textfield">
            <!-- password icon -->
            <i class="fa-solid fa-lock"></i>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "inp", @placeholder = "Enter your Password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", style = "color:red; text-align; margin-left:100px;" })

        </div>

        <!-- Confirm Password field -->
        <div class="textfield">
            <!-- password icon -->
            <i class="fa-solid fa-lock"></i>
            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "inp", @placeholder = "Confirm your Password" } })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger", style = "color:red; text-align; margin-left:100px;" })

        </div>

        <!-- Phone field -->
        <div class="textfield">
            <!-- phone icon -->
            <i class="fa-solid fa-phone"></i>
            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "inp", @placeholder = "Enter your Phone Number" } })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger", style = "color:red; text-align; margin-left:100px;" })
        </div>

        <div style="color:red; font-size:1.2em; text-align:center; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; ">
            @TempData["AlertMessageSignup"]
        </div>

        <input type="submit" class="btn" value="Register" />
    </form>
        }

       

    </div>

    <div class="LoginText" >
        <div class="title">
            <h2>Real Estate</h2>
            <div class="bar">
                <p>In Real State website you can buy, sell and rent state in short time,<br> the website is secure...</p>
            </div>
        </div>
    </div>
</div>
