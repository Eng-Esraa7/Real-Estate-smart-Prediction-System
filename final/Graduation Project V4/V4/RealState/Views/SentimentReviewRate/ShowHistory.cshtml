@using PagedList;
@using PagedList.Mvc;
@model IPagedList<RealState.Models.UserHistory>

@{
    ViewBag.Title = "History";
    Layout = "";
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>History</title>
    <link rel="stylesheet" href="~/css/userAco/History.css">
</head>
<body>
    <h1 class="text-center mb-5" style="position: fixed; top: 10px; left: 50%; transform: translateX(-50%); color:blueviolet;">Selled Estates And Reviews</h1>
    <div class="estate-container">
        @foreach (var item in Model)
        {
            <div class="estate-card">
                <div class="estate-img">
                    <img src="@item.EstatePic" alt="Estate Pic">
                </div>
                <div class="estate-info">
                    <div class="estate-header">
                        <h2>Estate Price</h2>
                        <p class="price"> @item.EstatePrice USD</p>
                    </div>
                    <div class="estate-body">
                        <div class="reviewer">
                            <span>Reviewer</span>
                            <h3>@item.ReviewrName</h3>
                        </div>
                        <div class="review">
                            <span>Review</span>
                            <h3>@item.Review</h3>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <p style="position: fixed; bottom: 1rem; left: 50%; transform: translateX(-50%);">
        @Html.ActionLink("Back to Estates", "States", "States", null, new { @class = "btn btn-back" })
    </p>
</body>